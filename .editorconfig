# Top-level EditorConfig—keeps files consistent across editors
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown: keep author formatting (don’t auto-strip spaces)
[*.md]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false
max_line_length = off

# YAML / GitHub Actions
[*.{yml,yaml}]
indent_size = 2

# Python
[*.py]
indent_size = 4

# PowerShell (use CRLF on Windows editors)
[*.ps1]
end_of_line = crlf

# Git-related text files
[.gitignore]
end_of_line = lf
